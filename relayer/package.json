{
  "name": "@bridge/relayer-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for cross-chain bridge VAA relay",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "jest --testPathPattern=test/e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src test --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "keywords": [
    "bridge",
    "cross-chain",
    "relayer",
    "vaa",
    "guardian"
  ],
  "author": "Bridge Team",
  "license": "MIT",
  "devDependencies": {
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1",
    "elliptic": "^6.5.5",
    "ethers": "^6.9.2",
    "js-sha3": "^0.9.3"
  }
}

