{
  "name": "bridge-programs",
  "version": "1.0.0",
  "description": "Solana Bridge Programs - Cross-chain bridge implementation",
  "license": "MIT",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:unit": "ts-mocha -p ./tsconfig.json -t 1000000 'tests/unit/**/*.test.ts'",
    "test:integration": "ts-mocha -p ./tsconfig.json -t 1000000 'tests/integration/**/*.test.ts'",
    "test:e2e": "ts-mocha -p ./tsconfig.json -t 1000000 'tests/e2e/**/*.test.ts'",
    "testnet:init": "ts-node scripts/initialize-testnet.ts",
    "testnet:verify": "ts-node scripts/verify-deployment.ts",
    "testnet:register": "ts-node scripts/register-tokens.ts",
    "testnet:test": "USE_TESTNET=true ts-mocha -p ./tsconfig.json -t 3000000 'tests/unit/**/*.test.ts'",
    "testnet:quick": "ts-mocha -p ./tsconfig.json -t 60000 tests/testnet-quick-test.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "elliptic": "^6.5.4",
    "js-sha3": "^0.9.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/elliptic": "^6.4.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.0.0",
    "bn.js": "^5.2.1",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3"
  }
}
